{
  "name": "sebastian/orm",
  "description": "Modern ORM for PHP 8+ with native Attribute support.",
  "autoload": {
    "psr-4": {
      "ORM\\": "src/ORM/",
      "Entity\\": "src/Entity/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.4",
    "ext-pdo": "*",
    "monolog/monolog": "^3.9",
    "psr/log": "^3.0",
    "ramsey/uuid": "^4.7",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^12"
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "make dev"
    ],
    "test": "make test",
    "composer": "make composer",
    "bash": "make bash"
  }
}
